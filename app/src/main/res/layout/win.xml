<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/lv_win"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:background="@drawable/win"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_home"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="200dp"
            app:layout_constraintTop_toTopOf="@id/lv_win"
            app:layout_constraintLeft_toLeftOf="@id/lv_win"
            app:layout_constraintRight_toLeftOf="@id/lv_win"/>

    <TextView
            android:id="@+id/difficulty"
            android:text="난이도"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toLeftOf="@id/lv_win"
            app:layout_constraintRight_toRightOf="@id/lv_win"
            app:layout_constraintTop_toBottomOf="@id/lv_win"/>

</androidx.constraintlayout.widget.ConstraintLayout>