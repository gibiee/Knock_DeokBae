<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/text_select"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/text_select"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="160dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/btn_easy"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_easy"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toTopOf="@id/btn_normal"
            app:layout_constraintRight_toLeftOf="@id/btn_normal"/>

    <ImageButton
            android:id="@+id/btn_normal"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_normal"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="@id/text_select"
            app:layout_constraintRight_toRightOf="@id/text_select"
            app:layout_constraintTop_toBottomOf="@id/text_select"/>

    <ImageButton
            android:id="@+id/btn_hard"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_hard"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="@id/btn_normal"
            app:layout_constraintLeft_toRightOf="@id/btn_normal"/>

    <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#000000"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>