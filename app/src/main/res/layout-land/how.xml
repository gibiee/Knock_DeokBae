<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/text_how"
            android:layout_width="420dp"
            android:layout_height="220dp"
            android:background="@drawable/text_how"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_back"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/text_how"
            app:layout_constraintTop_toBottomOf="@id/text_how"
            app:layout_constraintBottom_toBottomOf="@id/text_how"/>

    <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#000000"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>